<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="1dp"
        android:textSize="30sp"
        android:text="@string/you_wont_see_this"
        android:id="@+id/ip_text_view"
        android:visibility="invisible"
        android:textAlignment="center"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="1dp"
        android:text="@string/you_wont_see_this"
        android:textSize="30sp"
        android:layout_below="@id/ip_text_view"
        android:id="@+id/country_text_view"
        android:visibility="invisible"
        android:textAlignment="center"
        android:textColor="@color/black"/>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/get_ip_button"
        android:visibility="invisible"
        android:id="@+id/progress_bar"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/country_text_view"
        android:layout_marginVertical="1dp"
        android:layout_marginHorizontal="10dp"
        android:id="@+id/get_ip_button"
        android:text="@string/get_ip"
        android:textSize="20sp"/>

</RelativeLayout>